<metal:main metal:define-macro="footer">
  <footer class="footer mt-auto py-3">
    <div class="container">
      <div class="row">
        <div class="text-muted col-sm text-md-left text-center">
          loading time: ${'{0:.3f}s'.format(request.now() - request.time)}
          queries: ${request.queries}
        </div>

        <div class="text-muted col-sm text-center">
          <a role="button"
             class="btn btn-info btn-sm mr-2"
             tal:attributes="href request.route_path('changelog')">What's new?</a>
        </div>

        <div class="text-muted col-sm text-center text-md-right">
          <a href="https://www.uni-heidelberg.de/impressum.html">Impressum</a> <a href="/datenschutzerklaerung.html">Datenschutzerkl&auml;rung</a>
        </div>
      </div>
    </div>
  </footer>
</metal:main>
