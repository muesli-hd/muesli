<metal:main metal:define-macro="unsubscribe_modal">
  <div class="modal" tabindex="-1" role="dialog" id="confirm_unsubscribe">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-danger">! Achtung !</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>
          Möchtest du die Übungsgruppe der Vorlesung "${tutorial.lecture.name}" "${'bei {}'.format(tutorial.tutor.name) if tutorial.tutor is not None else ''}"
          wirklick verlassen?</p>
        </div>
        <div class="modal-footer">
          <a role="button"
             class="btn btn-danger"
             tal:condition="tutorial.lecture.mode != 'static'"
             tal:attributes="href request.route_path('tutorial_unsubscribe', tutorial_id=tutorial.id)">Austreten</a>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
        </div>
      </div>
    </div>
  </div>
</metal:main>
