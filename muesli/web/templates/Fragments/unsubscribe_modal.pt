<metal:main metal:define-macro="unsubscribe_modal">
  <div class="modal fade" id="confirm_unsubscribe" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Wirklich verlassen?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>TO BE FILLED BY JS</p>
        </div>
        <div class="modal-footer">
          <a role="button" class="btn btn-danger" id="confirm_unsubscribe_modal_button" href="#">Austreten</a>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
        </div>
      </div>
    </div>
  </div>
</metal:main>
